extends ../layout/index

block contenido
  main.container.mt-5
    include ../layout/partials/testimoniales
    .col-md-12
      h2.text-center Agrega un testimonio
      if(errores)
        each error in errores
          .alert.alert-danger.text-center #{error.mensaje}         
      .row.justify-content-center
        .col-md-8
          form(action="testimoniales" method="POST")
            .form-group
              label(for="nombre") Nombre
              input(id="nombre", class="form-control", type="text", placeholder="Tu nombre", name="nombre", value=nombre)
            .form-group
              label(for="nombre") Correo Electrónico
              input(id="correo", class="form-control", type="email", placeholder="Tu Correo Electrónico", name="correo", value=correo)  
            .form-group
              label(for="mensaje") Mensaje
              textarea(name="mensaje", cols="30", rows="3" placeholder="Tu mensaje", class="form-control", id="mensaje") #{mensaje}
            input.btn.btn-success.btn-block(type="submit", value="Agregar Testimonio")